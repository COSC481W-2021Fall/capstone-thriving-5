<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <EditText
        android:id="@+id/newTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selfCareListView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:hint="Task"
        android:importantForAutofill="no"
        android:inputType="text" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.HelpHero.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.HelpHero.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <include layout="@layout/bottom_button_row"/>

    <TextView
        android:id="@+id/temp_welcome"

        android:layout_width="196dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="109dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="341dp"

        android:text="Welcome to the Home Page!"
        android:textAlignment="center" />
  
    <Button
        android:id="@+id/ResourcesButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"

        android:text="Resources"
        />

    <Button
        android:id="@+id/HomeButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="@+id/ResourcesButton"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/ResourcesButton"

        android:text="Home"
        />

    <Button
        android:id="@+id/SOSButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="@+id/HomeButton"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"

        android:layout_toRightOf="@id/HomeButton"

        android:text="SOS"
        />

    <Button
        android:id="@+id/ProfileButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@+id/SOSButton"

        android:text="Profile" />

    <TextView
        android:id="@+id/DailyAffirmations"
        android:layout_width="245dp"
        android:layout_height="84dp"
        android:layout_above="@+id/ProfileButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="44dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="1dp"
        android:text="DailyAffirmations"
        android:visibility="visible" />

    <TextView
        android:id="@+id/selfCareLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selfCareListView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="11dp"
        android:labelFor="@+id/selfCareListView"
        android:text="Self-Care Checklist" />

    <ListView
        android:id="@+id/selfCareListView"
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:layout_above="@+id/DailyAffirmations"
        android:layout_marginBottom="9dp"
        android:choiceMode="multipleChoice" />

    <Button
        android:id="@+id/editCheckListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/selfCareLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="141dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/selfCareLabel"
        android:layout_toRightOf="@+id/selfCareLabel"
        android:backgroundTint="#cfcdcc"
        android:text="Edit Checklist"
        android:textColor="@color/black"
        android:textSize="10sp" />

</RelativeLayout>