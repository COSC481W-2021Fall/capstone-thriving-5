<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sos.SOSFragment">

    <TextView
        android:id="@+id/emergency_contact_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Emergency Contacts:"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergency_contact_text"
        app:layout_constraintVertical_bias="0.038">

        <LinearLayout
            android:id="@+id/card_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/card_label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Emergency Contact"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contact_name_one"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_label_1"
                        android:layout_margin="5dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/contact_relation_one"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_name_one"
                        android:layout_margin="5dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/contact_number_one"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_relation_one"
                        android:layout_margin="5dp"
                        android:text="" />

                    <Button
                        android:id="@+id/call_contact_one_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_number_one"
                        android:layout_margin="5dp"
                        android:text="Call" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/card_label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Emergency Contact"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contact_name_two"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_label_2"
                        android:layout_margin="5dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/contact_relation_two"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_name_two"
                        android:layout_margin="5dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/contact_number_two"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_relation_two"
                        android:layout_margin="5dp"
                        android:text="" />

                    <Button
                        android:id="@+id/call_contact_two_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_number_two"
                        android:layout_margin="5dp"
                        android:text="Call" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/card_label_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Emergency Contact"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contact_name_three"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_label_3"
                        android:layout_margin="5dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/contact_relation_three"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_name_three"
                        android:layout_margin="5dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/contact_number_three"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_relation_three"
                        android:layout_margin="5dp"
                        android:text="" />

                    <Button
                        android:id="@+id/call_contact_three_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_number_three"
                        android:layout_margin="5dp"
                        android:text="Call" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_sos"
        android:layout_width="200dp"
        android:layout_height="223dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="If you are going to harm yourself, have harmed yourself,
harm others, or is an emergency  you NEED TO STOP AND CALL 911
They are trained professional and can help
"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view"
        app:layout_constraintVertical_bias="0.898" />

    <Button
        android:id="@+id/AutoDial911"
        android:layout_width="163dp"
        android:layout_height="92dp"
        android:text="Auto Dial 911 Emergency"
        app:layout_constraintBottom_toBottomOf="@+id/text_sos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_sos" />

</androidx.constraintlayout.widget.ConstraintLayout>