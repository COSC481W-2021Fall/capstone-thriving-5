<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_resources"
        android:name="com.example.helphero.ui.resources.ResourcesFragment"
        android:label="Help Hero: Additional Resources"
        tools:layout="@layout/fragment_resources" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.helphero.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_sos"
        android:name="com.example.helphero.ui.sos.SOSFragment"
        android:label="SOS"
        tools:layout="@layout/fragment_sos" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.helphero.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>